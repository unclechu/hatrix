root = true

[*.{hs,cabal,yaml,md,sh,css}]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{hs,cabal,yaml,md}]
max_line_length = 100

[*.css]
max_line_length = 80

[*.md]
trim_trailing_whitespace = false

[*.sh]
max_line_length = 80
indent_style = tab
indent_size = 4
